@page "{id:Guid}"
@model CarRental.Web.Pages.Admin.CarOrders.Edit

@{
    Layout = "_LayoutPlain";
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Edit Car order</h1>
    </div>
</div>

<partial name="_Notification"></partial>

<div>
    <div class="container">
        <form method="post">
            <div class="mb-3 bg-light rounded-2 border border-2  box-shadow p-4">
                <h3 class="mb-3 display-6 text-lg-center">Offer Details</h3>
                <div class="row mb-3">
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="Id" class="form-label">Id</label>
                        <input type="text" class="form-control" id="Id" asp-for="CarOrderRequest.Id" readonly required>
                    </div>
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="CarOfferId" class="form-label">Car offer id</label>
                        <input type="text" readonly class="form-control" id="CarOfferId" asp-for="CarOrderRequest.CarOfferId">
                    </div>

                </div>
                <div class="row mb-3 ">
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="StartDate" class="form-label">Start date</label>
                        <input type="Date" readonly class="form-control" id="StartDate" asp-for="CarOrderRequest.StartDate"/>
                    </div>
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="EndDate" class="form-label">End date</label>
                        <input type="Date" readonly class="form-control" id="EndDate" asp-for="CarOrderRequest.EndDate"/>
                    </div>
                </div>
                <div class="row mb-3 ">
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="NumOfDrivers" class="form-label">Number of drivers</label>
                        <input type="text" readonly class="form-control" id="NumOfDrivers" asp-for="CarOrderRequest.NumOfDrivers">
                    </div>
                    <div class="form-group col-md-6 col-sm-12 p-2 ">
                        <label for="TotalPrice" class="form-label">Total price</label>
                        <input type="text" class="form-control" required readonly id="TotalPrice" asp-for="CarOrderRequest.TotalPrice"/>
                    </div>
                </div>
            </div>
            <div class="mb-3 bg-light  box-shadow rounded-2 border border-2 p-4">
                <h3 class="mb-3 display-6 text-lg-center">User details</h3>
                <div class="row mb-3">
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="UserId" class="form-label">User id</label>
                        <input type="text" readonly class="form-control" id="UserId" asp-for="CarOrderRequest.UserId">
                    </div>
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="UserName" class="form-label">User name</label>
                        <input type="text" readonly class="form-control" id="UserName" asp-for="CarOrderRequest.UserName"/>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="Name" class="form-label">Name</label>
                        <input type="text" readonly class="form-control" id="Name" asp-for="CarOrderRequest.Name">
                    </div>
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="Surname" class="form-label">Surname</label>
                        <input type="text" readonly class="form-control" id="Surname" asp-for="CarOrderRequest.Surname"/>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="PhoneNumber" class="form-label">Phone number</label>
                        <input type="text" readonly class="form-control" id="PhoneNumber" asp-for="CarOrderRequest.PhoneNumber">
                    </div>
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="EmailAddress" class="form-label">Email address</label>
                        <input type="text" readonly class="form-control" id="EmailAddress" asp-for="CarOrderRequest.EmailAddress"/>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="City" class="form-label">City</label>
                        <input type="text" readonly class="form-control" id="City" asp-for="CarOrderRequest.City"/>
                    </div>
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="Postcode" class="form-label">Post code</label>
                        <input type="text" readonly class="form-control" id="Postcode" asp-for="CarOrderRequest.Postcode">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="Address" class="form-label">Address</label>
                        <input type="text" readonly class="form-control" id="Address" asp-for="CarOrderRequest.Address">
                    </div>
                    <div class="form-group col-md-6 col-sm-12 p-2">
                        <label for="DriversLicenseNumber" class="form-label">Driver license number</label>
                        <input type="text" readonly class="form-control" id="DriversLicenseNumber" asp-for="CarOrderRequest.DriversLicenseNumber">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="State" class="form-label">State</label>
                    <select class="form-select" id="State" asp-for="CarOrderRequest.State">
                        <option value="Active">Active</option>
                        <option value="Expired">Expired</option>
                        <option value="notStartedYet">Not yet started</option>
                    </select>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>