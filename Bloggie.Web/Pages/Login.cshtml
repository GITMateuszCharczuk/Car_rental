@page
@model Bloggie.Web.Pages.Login

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <partial name="_Notification"></partial>

            <h1 class="mt-5 mb-3 h3">Login</h1>

            <form method="post">

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" asp-for="LoginViweModel.Username" required>
                    <span class="text-danger" asp-validation-for="LoginViweModel.Username"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="LoginViweModel.Password" required minlength="6">
                    <span class="text-danger" asp-validation-for="LoginViweModel.Password"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn bg-dark text-light">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>